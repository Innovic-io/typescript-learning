{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "src/",
    "outDir": "dist/",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
